{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [{ "name": "next" }],
    "module": "esnext"
  },
  "include": [
    ".",
    ".next/types/**/*.ts",
    "../../packages/db/collections",
    "../../packages/db/payload-types.ts",
    "../../packages/db/payload.config.ts"
  ],
  "exclude": ["node_modules"]
}
